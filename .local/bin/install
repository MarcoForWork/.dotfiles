#!/bin/sh

#Make basic directory
#dl = download | pix = pictures | vid = videos | doc = doccument | prog = code archives
mkdir dl pix vid doc prog

#Make vital directory
ln -sf ~/.dotfiles/.local ~/.local
ln -sf ~/.dotfiles/.xinitrc ~/.xinitrc
ln -sf ~/.dotfiles/.config ~/.config

#Install necessary application
git clone https://aur.archlinux.org/paru.git
cd paru
makepkg -si
paru -S zsh-syntax-highlighting python-pywalfox cava

#Config resplution
~/.local/bin/autores

#Enable ssh server
sudo systemctl enable sshd
sudo systemctl start sshd

#Install suckless
cd ~/.local/src/dwm
sudo make clean install
cd ..
cd ~/.local/src/dmenu
sudo make clean install
cd ..
cd ~/.local/src/slstatus
sudo make clean install
cd ..
cd ~/.local/src/st
sudo make clean install
cd

#Config zsh
sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"
sudo ln -sf ~/.dotfiles/.oh-my-zsh ~/.oh-my-zsh
sudo ln -sf ~/.dotfiles/.zshrc ~/.zshrc
sudo ln -sf ~/.dotfiles/.zprofile ~/.zprofile
zsh

#Install Lazyvim 
git clone https://github.com/LazyVim/starter ~/.config/nvim
rm -rf ~/.config/nvim/.git

#Install Doom emacs
git clone https://github.com/hlissner/doom-emacs ~/.emacs.d
~/.emacs.d/bin/doom install

#Config neomutt
cd dl
git clone https://github.com/LukeSmithxyz/mutt-wizard
cd mutt-wizard
sudo make install
cd

